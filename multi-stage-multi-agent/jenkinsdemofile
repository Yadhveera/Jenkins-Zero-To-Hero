pipeline {
    agent {
        docker {
            image 'openjdk:11'  // Use an image with JDK 11 installed
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                 checkout scm
            }
        }
        
        stage('Build and Run') {
            steps {


               // Compile the Java program
                sh 'javac HelloWorld.java'
                
                // Run the Java program
                sh 'java HelloWorld'
           
                }
            }
        }
    }

