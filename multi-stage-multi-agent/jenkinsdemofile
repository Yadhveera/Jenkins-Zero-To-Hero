pipeline {
    agent {
        docker {
            image 'openjdk:11'  // Use an image with JDK 11 installed
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                 checkout scm
            }
        }
        
        stage('Build and Run') {
            steps {
                sh 'javac HelloWorld.java'
                def output = sh(script: 'java HelloWorld', returnStdout: true).trim()
                script {
                    if (output.contains("Hello, World!")) {
                        echo 'Java program executed successfully'
                    } else {
                        error 'Java program did not produce expected output'
                    }
                }
            }
        }
    }
}
